<h2>Comments</h2>
<% @project.comments.order('created_at DESC').each do |comment| %>
  <p>
    <strong>Comment by: </strong><%= comment.commenter %>
 
	<strong>Comment: </strong><%= comment.body %>
  </p>

<% end %>
 
<h2>Add a comment:</h2>
<%= form_for([@project, @project.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>